{
  "name": "basketball-stats-api",
  "version": "1.0.0",
  "description": "Basketball stats API with Hono",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx src/lib/seed.ts",
    "db:studio": "prisma studio",
    "db:status": "prisma migrate status",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:db": "tsx src/lib/test-db.ts",
    "test:boxscore": "tsx src/lib/test-boxscore.ts",
    "test:realtime": "tsx src/lib/test-realtime.ts",
    "test:broadcast": "tsx src/lib/test-broadcast.ts",
    "demo:realtime": "tsx src/lib/realtime-demo.ts",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@hono/node-server": "^1.8.0",
    "@prisma/client": "^6.19.1",
    "@sentry/node": "^7.85.0",
    "@supabase/supabase-js": "^2.38.0",
    "date-fns": "^3.0.0",
    "dotenv": "^17.2.3",
    "hono": "^4.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "prisma": "^6.19.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  }
}
